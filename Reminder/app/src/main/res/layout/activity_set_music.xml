<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@android:style/Theme.Translucent.NoTitleBar"
    tools:context=".SetMusic">

    <TextView
        android:id="@+id/txtMusicText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setMusic"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginBottom="16dp"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtMusicText"
        android:id="@+id/spinnerMusic"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerMusic"
        android:text="Zil Sesi Olarak Ayarla"
        android:id="@+id/btnSaveMusic"/>

</RelativeLayout>


